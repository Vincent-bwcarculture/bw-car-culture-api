{
  "version": 2,
  "functions": {
    "api/user-services.js": {
      "maxDuration": 30
    },
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/payments/available-tiers",
      "destination": "/api/user-services"
    },
    {
      "source": "/api/payments/initiate",
      "destination": "/api/user-services"
    },
    {
      "source": "/api/payments/history",
      "destination": "/api/user-services"
    },
    {
      "source": "/api/addons/available",
      "destination": "/api/user-services"
    },
    {
      "source": "/api/addons/purchase",
      "destination": "/api/user-services"
    },
    {
      "source": "/api/addons/my-addons", 
      "destination": "/api/user-services"
    },
    {
      "source": "/api/user/vehicles",
      "destination": "/api/user-services"
    },
    {
      "source": "/api/user/listings",
      "destination": "/api/user-services"
    },
    {
      "source": "/api/user/listings/stats",
      "destination": "/api/user-services"
    },
    {
      "source": "/api/user/listings/(.*)/status",
      "destination": "/api/user-services"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index"
    }
  ]
}